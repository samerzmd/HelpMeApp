<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.kawaii.helpme.Fragments.HelpRequesterFragment">


    <com.andreabaccega.widget.FormEditText
        android:textColor="@color/black"
        whatever:testType="domainName"
        whatever:emptyErrorString="@string/explanation_personname"
        whatever:testErrorString="@string/explanation_personname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:id="@+id/helpTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <EditText

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minLines="4"
        android:layout_marginTop="5dp"
        android:layout_below="@id/helpTitle"
        android:id="@+id/helpDescription"/>

</RelativeLayout>
